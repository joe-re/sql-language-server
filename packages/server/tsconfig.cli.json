{
    "compilerOptions": {
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "target": "es2017",
      "module": "es6",
      "lib": [ "es2018", "es2019" ],
      "moduleResolution": "node",
      "esModuleInterop": true,
      "outDir": "dist",
      "declaration": true,
      "baseUrl": ".",
    },
    "include": [
      "bin/**/*",
      "src/**/*",
    ],
    "exclude": [
      "node_modules"
    ]
  }
  
  