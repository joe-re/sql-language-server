{
  "compilerOptions": {
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "target": "es2017",
    "module": "es6",
    "lib": [ "es2018", "es2019" ],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@sql-language-server/sqlint": ["packages/sqlint/dist"]
    }
  },
  "include": ["../sqlint"],
  "exclude": [
    "node_modules",
    "example"
  ]
}

