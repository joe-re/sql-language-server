{
  "compilerOptions": {
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "target": "es2017",
    "module": "CommonJS",
    "lib": [ "es2018", "es2019" ],
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "declaration": true,
    "baseUrl": ".",
    "composite": true,
    "paths": {
      "sql-language-server": ["packages/server/*"],
      "@joe-re/sql-parser": ["packages/sql-parser/*"],
      "sqlint": ["packages/sqlint/*"]
    }
  },
}
