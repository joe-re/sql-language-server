{
    "compilerOptions": {
        "strict": true,
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "lib",
        "skipLibCheck": true,
        "sourceMap": true,
        "declarationMap": true,
        "inlineSources": false,
        "declaration": true,
        "stripInternal": true,
        "lib": [
          "es2016",
          "dom"
        ],
    },
    "include": [
        "src"
    ],
    "exclude": [ "node_modules" ]
}