{
  "compilerOptions": {
    "strict": true,
    "target": "ES2015",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "dist",
    "skipLibCheck": true,
    "sourceMap": true,
    "declarationMap": true,
    "inlineSources": false,
    "esModuleInterop": true,
    "declaration": true,
    "stripInternal": true,
    "lib": [
      "es2016",
      "dom"
    ],
  },
  "include": [
    "src"
  ],
  "exclude": [ "node_modules" ]
}

